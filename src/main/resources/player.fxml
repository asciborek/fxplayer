<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableColumn?>
<BorderPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.github.asciborek.player.PlayerController"
  prefHeight="1000.0" prefWidth="1200.0">

  <top>
    <MenuBar>
      <Menu text="Music">
        <MenuItem text="Clear The Playlist" onAction="#clearPlaylist"/>
        <MenuItem text="Quit" onAction="#quit"/>
      </Menu>
    </MenuBar>
  </top>

  <center>
    <TableView fx:id="playlistView">
      <columns>
        <TableColumn fx:id="titleColumn" text="Title" minWidth="200"/>
        <TableColumn fx:id="albumColumn" text="Album" minWidth="200"/>
        <TableColumn fx:id="artistColumn" text="Artist" minWidth="200"/>
        <TableColumn fx:id="lengthColumn" text="Length" maxWidth="100"/>
        <TableColumn fx:id="filenameColumn" text="File Name" minWidth="300"/>
      </columns>
    </TableView>
  </center>

</BorderPane>
